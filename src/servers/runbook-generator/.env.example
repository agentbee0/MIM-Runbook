# Copy this file to .env and fill in your values.
# Never commit .env to source control.

# ------------------------------------------------------------
# Phase 2: ServiceNow Integration
# ------------------------------------------------------------
# Your ServiceNow instance subdomain (e.g. "mycompany" for mycompany.service-now.com)
SNOW_INSTANCE=your-company.service-now.com

# Authentication type: "basic" (username/password) or "bearer" (OAuth token)
SNOW_AUTH_TYPE=basic

# Basic auth credentials (used when SNOW_AUTH_TYPE=basic)
SNOW_USERNAME=your-service-account
SNOW_PASSWORD=your-password

# OAuth 2.0 Client Credentials (used when SNOW_AUTH_TYPE=bearer)
# SNOW_AUTH_TYPE=bearer
# SNOW_CLIENT_ID=your-client-id
# SNOW_CLIENT_SECRET=your-client-secret

# ------------------------------------------------------------
# Default File Paths
# ------------------------------------------------------------
# Relative to the servers/runbook-generator/ directory
RUNBOOK_INPUT_DIR=../../input
RUNBOOK_OUTPUT_DIR=../../output
